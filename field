<?php
$tbl=$_GET['page'];

//$tbl='appraisal_master';
$field_edit=array('name','alias','size','type','dbindex');
$field_show=array();
$qual=NULL;

if(isset($_POST['modify']) || isset($_POST['update']))
{
echo input($tbl,$qual,$field_edit,$field_show);
}else
{
echo display($tbl,$qual,1,$field_show);
addrow($tbl);
}
?>